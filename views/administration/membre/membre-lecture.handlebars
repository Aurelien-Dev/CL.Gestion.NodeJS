<div class="container">
    <h2 class="text-center">{{membre.prenom}} {{membre.nom}}</h2>

    {{!-- Information membre --}}
    <div class="row">
        <div class="col-xl-12 col-md-12 mb-4">
            <div class="card shadow border-left-primary">
                <!-- Card Header - Accordion -->
                <a href="#collapseCardIG" class="d-block card-header py-3" data-toggle="collapse" role="button"
                    aria-expanded="true" aria-controls="collapseCardIG">
                    <h6 class="m-0 font-weight-bold text-primary">Information générales</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="collapseCardIG">
                    <div class="card-body">
                        <input type="hidden" name="numero_sequence_membre" id="numero_sequence_membre"
                            value="{{membre.numero_sequence}}" />
                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <i class="far fa-envelope"></i>
                                <strong>Adresse mail :</strong>
                            </div>
                            <div class="col-xs-12 col-md-7">
                                {{membre.adresse_courriel}}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <i class="fas fa-mobile-alt"></i>
                                <strong>Téléphone : </strong>
                            </div>
                            <div class="col-xs-12 col-md-7">{{membre.telephone}}</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <i class="fas fa-birthday-cake"></i>
                                <strong>Date de naissance : </strong>
                            </div>
                            <div class="col-xs-12 col-md-7">{{membre.date_naissance}}</div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <i class="far fa-id-badge"></i>
                                <strong>Rôle : </strong>
                            </div>
                            <div class="col-xs-12 col-md-3">
                                <select class="form-control form-control-sm" name="role" id="role"
                                    data-value="{{membre.role}}">
                                    <option></option>
                                    {{#each enumeration.ROLE}}
                                    {{#if (eq this.code ../membre.role)}}
                                    <option value="{{this.code}}" selected>{{this.libelle}}</option>
                                    {{else}}
                                    <option value="{{this.code}}">{{this.libelle}}</option>
                                    {{/if}}
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-xs-12 col-md-2">
                                <button class="btn btn-sm btn-primary" type="button" id="enregistrerRole"
                                    data-loading-text="Chargement ..."> Enregistrer</button>
                            </div>
                        </div>

                        <hr class="sidebar-divider">

                        <div class="row">
                            <div class="col-xs-12 col-md-4">
                                <i class="far fa-calendar-check"></i>
                                <strong>Date d'inscription au club : </strong>
                            </div>
                            <div class="col-xs-12 col-md-7">{{membre.date_creation}}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- Formulaires risques --}}
    <div class="row">
        <div class="col-xl-12 col-md-12 mb-4">
            <div class="card shadow">
                <!-- Card Header - Accordion -->
                <a href="#collapseCardFiche" class="d-block card-header py-3" data-toggle="collapse" role="button"
                    aria-expanded="true" aria-controls="collapseCardFiche">
                    <h6 class="m-0 font-weight-bold text-primary">Formulaires risques</h6>
                </a>
                <div class="collapse show" id="collapseCardFiche">
                    <div class="card-body">
                        <div class="table-responsive-sm">
                            <table class="table table-bordered table-sm" id="tblFicheRisque">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Adhésion --}}
    <div class="card shadow mb-4">
        <!-- Card Header - Accordion -->
        <a href="#collapseCardAdh" class="d-block card-header py-3" data-toggle="collapse" role="button"
            aria-expanded="true" aria-controls="collapseCardAdh">
            <h6 class="m-0 font-weight-bold text-primary">Adhésions</h6>
        </a>
        <div class="collapse show" id="collapseCardAdh">
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    <h5 class="alert-heading">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-info-circle-fill"
                            fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412l-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM8 5.5a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                        </svg>
                        Informations
                    </h5>
                    <hr>
                    Adhésions expirés en rouge
                </div>
                <div class="table-responsive-sm">
                    <table class="table table-bordered table-sm" id="tblAdhesions">
                    </table>
                </div>
                <br />

                <input class="btn btn-dark" type="button" value="Créer une nouvelle adhésion" id="btnCreerAdhesion" />

            </div>
        </div>
    </div>
</div>

<p class="champ text-center">
    <input class="btn btn-dark" type="button" value="retour" id="retour" />
</p>



{{#contentFor "pageStyles"}}
<link href="/lib/datatable/datatables.min.css" rel="stylesheet">
{{/contentFor}}


{{#contentFor "pageScripts"}}
<script src="/lib/datatable/datatables.min.js"></script>

<script src="/js/administration/membre/membre.js"></script>

<script>
    $(function () {

        $('#retour').click(function () {
            window.history.back();
        });

    });
</script>
{{/contentFor}}