<form id="frmModifierAdhesion" action="/demander-carte" method="POST">
    <div id="modalModifierAdhesion" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Modification de la carte
                        <strong id="modalInfoCarte">{{this.infoAdhesion.nom}} {{_year
                            this.infoAdhesion.date_debut}}</strong>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="numero_sequence_membre" name="numero_sequence_membre"
                        value="{{membre.numero_sequence}}" />


                    <div class="form-group row">
                        <label for="statut_demande" class="col-sm-4 col-form-label">Statut de la demande de carte
                            <strong class="obligatoire">*</strong></label>
                        <div class="col-sm-4">
                            <select class="form-control" name="statut_demande" id="statut_demande" required>
                                <option></option>
                                {{#each enumeration.STATUT_DEMANDE}}
                                {{#if (eq (_toInt this.code) ../infoAdhesion.numero_sequence_statut_demande)}}
                                <option value="{{this.code}}" selected>{{this.libelle}}</option>
                                {{else}}
                                <option value="{{this.code}}">{{this.libelle}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="type_transaction" class="col-sm-4 col-form-label">Type de transaction
                            <strong class="obligatoire">*</strong></label>
                        <div class="col-sm-4">
                            <select class="form-control" name="type_transaction" id="type_transaction" required>
                                <option></option>
                                {{#each enumeration.TYPE_TRANSAC}}
                                {{#if (eq this.code ../infoAdhesion.type_transaction)}}
                                <option value="{{this.code}}" selected>{{this.libelle}}</option>
                                {{else}}
                                <option value="{{this.code}}">{{this.libelle}}</option>
                                {{/if}}
                                {{/each}}
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="nom_prenom_contact" class="col-sm-4 col-form-label champ">
                            Date d√©but <strong class="obligatoire">*</strong>
                        </label>
                        <div class="col-sm-4">
                            <input name="nom_prenom_contact" id="nom_prenom_contact"
                                class="form-control form-control-sm" placeholder="" type="date"
                                value="{{this.infoAdhesion.date_debut}}" required="">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="nom_prenom_contact" class="col-sm-4 col-form-label champ">
                            Date fin <strong class="obligatoire">*</strong>
                        </label>
                        <div class="col-sm-4">
                            <input name="nom_prenom_contact" id="nom_prenom_contact"
                                class="form-control form-control-sm" placeholder="" type="date"
                                value="{{this.infoAdhesion.date_fin}}" required="">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Envoyer la demande</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                </div>
            </div>
        </div>
    </div>
</form>