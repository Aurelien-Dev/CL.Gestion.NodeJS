
<form id="frmAjouterDepense">
    <div id="modalAjouterDepense" tabindex="-1" role="dialog">
        <div role="document">
            <div >
                <div >
                    <h4 >Modifier une dépense</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div>

                    <div class="form-group">
                    <div class="form-row">
                        <label class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <input id="description" value="{{depense.description}}"/>
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="col-sm-2 col-form-label" >Montant</label>
                        <div class="col-sm-8">
                            <input id="montant" value="{{depense.montant}}" class="nombre"/>$
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="col-sm-2 col-form-label">Kilométrage</label>
                        <div class="col-sm-8">
                            <input id="kilometres" value="{{depense.kilometres}}" class="nombre"/>km
                        </div>
                    </div>  

                    <div class="form-row">
                    <label class="col-sm-2 col-form-label">Participant à rembourser</label> 
                    <div class="col-sm-8">
                        <select name="rembourser">
                            {{#each participants}}
                            {{#if (eq ../depense.rembourser @index)}}
                            <option value="{{@index}}" selected>{{this.nom}}</option>
                            {{else}}
                            <option value="{{@index}}">{{this.nom}}</option>
                            {{/if}}
                            {{/each}}
                        </select>                  
                    </div> 
                    </div>
                
                
                <h5>Participants</h5>
                {{#each depense.participants}}
                    <ul><input type="checkbox" name="participants" id="dep{{@index}}" {{#if this}}checked{{/if}}/>{{#with (lookup ../participants @index)}}{{this.nom}}{{/with}}</ul>
                {{/each}}
                </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnEnregistrer" href="api/calculette/depense/">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" id="btnFermer" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
</form>

{{#contentFor "pageStyles"}}
    <link href="/lib/datatable/datatables.min.css" rel="stylesheet">
{{/contentFor}}

{{#contentFor "pageScripts"}}
    <script src="/lib/datatable/datatables.min.js" asp-append-version="true"></script>
    
    <script src="/js/home/calculette/editerDepense.js" asp-append-version="true"></script>
{{/contentFor}}