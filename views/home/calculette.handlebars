<div class="container">
    <div class="table-responsive-sm">
        <h3>La calculette</h3>
        <input class="btn btn-dark" type="button" value="Ajouter un participant" id="ajouterParticipant" />
        <input class="btn btn-dark" type="button" value="Ajouter une dépense" id="ajouterDepense" />
        <table class="table table-bordered table-sm" id="tbl-participants">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Participant</th>
                </tr>
            </thead>
            <tbody>
                {{#each membres}}
                    <tr>
                        <td>
                            <a href="/api/calculette/participant/{{@index}}" class="supprimer-participant">
                                <i class="far fa-trash-alt"></i>                   
                            </a>
                        </td>
                        <td>
                            {{this.nom}}  {{this.montant}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
         <table class="table table-bordered table-sm" id="tbl-depenses">
            <thead>
                <tr>
                    <th>Dépenses</th>
                </tr>
            </thead>
            <tbody>
                {{#each depenses}}
                    <tr>
                        <td>
                            {{this.description}} {{this.montant}} {{#each ../membres}} {{this.nom}} {{/each}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>       
    </div>
</div>
<br />

<br />
<form id="frmAjouterParticipant">
    <div id="modalAjouterParticipant" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajouter un participant</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Nom du participant</label>
                        <div class="col-sm-8">
                            <input id="nom"/>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnAjouterParticipant">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="frmAjouterDepense">
    <div id="modalAjouterDepense" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Ajouter une dépense</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Description</label>
                        <div class="col-sm-8">
                            <input id="description"/>
                        </div>
                        <label class="col-sm-4 col-form-label">Montant</label>
                        <div class="col-sm-8">
                            <input id="montant"/>
                        </div>                        
                    </div>

                Participants
                {{#each membres}}
                    <li><input type="checkbox" id="dep{{@index}}" value="Yé!" name="participants" checked> {{this.nom}} </li>
                {{/each}}
               
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnAjouterDepense">Enregistrer</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
</form>


{{#contentFor "pageStyles"}}
    <link href="/lib/datatable/datatables.min.css" rel="stylesheet">
{{/contentFor}}

{{#contentFor "pageScripts"}}
    <script src="/lib/datatable/datatables.min.js" asp-append-version="true"></script>
    
    <script src="/js/home/calculette.js" asp-append-version="true"></script>
{{/contentFor}}